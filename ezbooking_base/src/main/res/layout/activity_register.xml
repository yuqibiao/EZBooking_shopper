<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:fitsSystemWindows="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_login_tip"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text=""
        android:textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_user_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/icon_user" />


    <TextView
        android:id="@+id/tv_upload_icon"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:paddingRight="15dp"
        android:text="上传用户图"
        android:textColor="@color/my_blue"
        android:visibility="invisible"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:background="@color/my_trans"
        android:hint="请输入用户名称"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>
    <View
        style="@style/gray_line"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/yellow_gradient_line"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_user_tel"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/my_trans"
            android:hint="请输入手机号码"
            android:inputType="textPhonetic"
            android:paddingLeft="10dp"
            android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <View
            style="@style/gray_line"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/yellow_gradient_line"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:paddingBottom="0dp"
            android:layout_height="35dp"
            android:background="@color/my_trans"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>
        <View
            style="@style/gray_line"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/yellow_gradient_line"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_find_pwd"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:paddingRight="15dp"
        android:text="忘记密码？"
        android:textColor="@color/my_blue"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/my_blue"
        android:textSize="18sp" />

</LinearLayout>

</FrameLayout>