<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/colorAccent</item>dddd
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="AppTheme" parent="@style/BaseAppTheme"/>

    <!-- dialog 的style -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground"> @android:color/transparent </item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--dialog动画的style-->
    <style name="dialog_anim" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/modal_in</item>
        <item name="android:windowExitAnimation">@anim/modal_out</item>
    </style>

    <!--图片选择pop动画-->
    <style name="pic_choice">
        <item name="android:windowEnterAnimation">@anim/pic_choice_pop_hidden</item>
        <item name="android:windowExitAnimation">@anim/pic_choice_pop_show</item>
    </style>

    <!--gray line-->
    <style name="gray_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/main_color_dark</item>
    </style>

    <!--SwipeBackLayout样式-->
    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@mipmap/shadow_left</item>
        <item name="shadow_right">@mipmap/shadow_right</item>
        <item name="shadow_bottom">@mipmap/shadow_bottom</item>
    </style>

</resources>
