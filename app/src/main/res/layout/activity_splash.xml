<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_white">

    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.yyyu.barbecue.ezbooking_base.ui.widget.MyGradientTextView
            android:id="@+id/ctv_login"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="登录"
            android:textSize="16sp"
            android:visibility="gone"
            app:center_color="#fcdcbe"
            app:end_color="#F76B1C"
            app:start_color="#F76B1C" />

        <com.yyyu.barbecue.ezbooking_base.ui.widget.MyGradientTextView
            android:id="@+id/ctv_register"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="注册"
            android:textSize="16sp"
            android:visibility="gone"
            app:center_color="#fcdcbe"
            app:end_color="#F76B1C"
            app:start_color="#F76B1C" />

    </LinearLayout>

</RelativeLayout>